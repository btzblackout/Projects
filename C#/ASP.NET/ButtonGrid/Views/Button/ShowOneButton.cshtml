@model ButtonGrid.Models.ButtonModel
@{
    //store the img  names in an array for more efficient code.
    string[] imgNames = { "Blue-Button.png", "Green-Button.png", "Yellow-Button.png" };
}

<button class="game-button" type="submit" value="@Model.Id" name="buttonNumber" asp-controller="Button" asp-action="HandleButtonClick">
    <img class="game-button-image" src="~/img/@imgNames[Model.ButtonState]" />
    <div class="button-label">
        @Model.Id
        ,
        @Model.ButtonState
    </div>
</button>

@model Financial_Management_App.Models.Income

<h4>Income</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessEditIncome">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ID" hidden/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Begin_Date" class="control-label"></label>
                <input asp-for="Begin_Date" class="form-control"/>
                <span asp-validation-for="Begin_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Interval" class="control-label"></label>
                <input asp-for="Interval" class="form-control" />
                <span asp-validation-for="Interval" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @{
                    if (Model.Type == "Week")
                    {
                        <p class="expenseCheckBoxes">Week </p><input type="radio" id="Type" name="Type" value="Week" checked="checked" />
                        <p class="expenseCheckBoxes">Month </p><input type="radio" id="Type" name="Type" value="Month" />
                    }
                    else
                    {
                        <p class="expenseCheckBoxes">Week </p><input type="radio" id="Type" name="Type" value="Week" />
                        <p class="expenseCheckBoxes">Month </p><input type="radio" id="Type" name="Type" value="Month" checked="checked" />
                    }
                }
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Income">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

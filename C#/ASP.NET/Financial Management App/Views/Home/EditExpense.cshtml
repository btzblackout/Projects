@model Financial_Management_App.Models.Expense

<h4>Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessEditExpense">
            <input asp-for="ID" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Interval" class="control-label"></label>
                <input asp-for="Interval" class="form-control" />
                <span asp-validation-for="Interval" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Type: </label>
                @{
                    if (Model.Type == "Week")
                    {
                        <p class="expenseCheckBoxes">Week </p><input type="radio" id="Type" name="Type" value="Week" checked="checked" />
                        <p class="expenseCheckBoxes">Month </p><input type="radio" id="Type" name="Type" value="Month" />
                    }
                    else
                    {
                        <p class="expenseCheckBoxes">Week </p><input type="radio" id="Type" name="Type" value="Week" />
                        <p class="expenseCheckBoxes">Month </p><input type="radio" id="Type" name="Type" value="Month" checked="checked" />
                    }
                }
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Label" class="control-label">Label: </label>
                @{
                    if (Model.Label == "Fixed")
                    {
                        <p class="expenseCheckBoxes">Fixed </p><input type="radio" id="Label" name="Label" value="Fixed" checked="checked" />
                        <p class="expenseCheckBoxes">Variable </p><input type="radio" id="Label" name="Label" value="Variable" />
                    }
                    else
                    {
                        <p class="expenseCheckBoxes">Fixed </p><input type="radio" id="Label" name="Label" value="Fixed" />
                        <p class="expenseCheckBoxes">Variable </p><input type="radio" id="Label" name="Label" value="Variable" checked="checked" />
                    }
                }
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Previous Date: @Model.Date</p>
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Expenses">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    function myFunction() {
            if()
            var x = document.getElementById("Type");
            if (x.type == "password") {
                x.type = 'text';
            }
            else {
                x.type = 'password';
            }
        }
</script>
}

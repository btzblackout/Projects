@using Financial_Management_App.Models
@model User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blackout Financial Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <section class="h-100 gradient-form">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-10 h-100">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-3 d-flex align-items-center gradient-custom-1"></div>
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">
                                    <div class="text-center">
                                        <img class="logo" src="~/Logo.png" alt="logo">
                                    </div>
                                    <br>
                                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                                    {
                                        <div class="form-outline mb-4">
                                            <span>Username</span> <br/>
                                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                        </div>
                                        <div class="form-outline mb-4">
                                            <span>Password</span> <br />
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        </div>
                                        <div class="text-center pt-1 mb-5 pb-1">
                                            <button class="btn login-button btn-block fa-lg mb-3" type="submit" id="submit">Log in</button>
                                        </div>
                                    }
                                    <hr/>
                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2 mr-3">Don't have an account?</p> 
                                            <button type="button" class="btn btn-outline-danger" onclick="location.href='@Url.Action("Register", "Login")'">Create new</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 d-flex align-items-center gradient-custom-2"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Blackout Financial Management
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
